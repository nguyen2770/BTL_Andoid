<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutAlbum">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tmv_avataImgAl"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_margin="10dp"
            android:layout_marginStart="126dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="243dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_titleAlbum"
            android:layout_width="158dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tmv_avataImgAl" />

        <TextView
            android:id="@+id/txt_authorAlbum"
            android:layout_width="155dp"
            android:layout_height="0dp"
            android:layout_marginTop="9dp"
            android:text="Author"
            android:textColor="@color/nameAuthor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_titleAlbum" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>